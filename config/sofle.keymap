/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  `       |  1  |  2  |  3   |  4   |  5   |                           |  6   |  7    |  8    |  9   |   0   | INS        |
// |  ESC     |  Q  |  W  |  E   |  R   |  T   |                           |  Y   |  U    |  I    |  O   |   P   |  [         |
// |  TAB     |  A  |  S  |  D   |  F   |  G   |                           |  H   |  J    |  K    |  L   |   ;   |   '        |
// | SHFT|CPL |  Z  |  X  |  C   |  V   |  B   |        |         |        |  N   |  M    |  ,    |  .   |   /   | LSHFT      |
//               |LGUI    | ALT  | CTRL   | 2  |  RET   |         | SPACE  | SPACE| CTRL  | ALT   | LGUI |
            bindings = <
&kp GRAVE      &kp N1 &kp N2   &kp N3   &kp N4    &kp N5                                &kp N6       &kp N7    &kp N8    &kp N9   &kp N0   &kp INS
&kp ESC        &kp Q  &kp W    &kp E    &kp R     &kp T                                 &kp Y        &kp U     &kp I     &kp O    &kp P    &kp LBKT
&kp TAB        &kp A  &kp S    &kp D    &kp F     &kp G                                 &kp H        &kp J     &kp K     &kp L    &kp SEMI &kp SQT
&kp LSHFT      &kp Z  &kp X    &kp C    &kp V     &kp B     &to 1          &to 2        &kp N        &kp M     &kp COMMA &kp DOT  &kp FSLH &kp RSHFT
                      &kp LGUI &kp LALT &kp LCTRL &mo 1 &kp RET            &kp SPACE    &mo 2        &kp RCTRL &kp RALT  &kp LGUI
            >;

            sensor-bindings = <&inc_dec_kp DOWN UP &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// | `     |   1 |   2 |   3  |   4  |   5  |                   |   6  |   7   |   8   |   9  |    0  |  F12  |
// |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
// |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
//               |     |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&trans    &kp F1    &kp F2    &kp F3      &kp F4    &kp F5                    &kp F6    &kp F7   &kp F8          &kp F9    &kp F10   &kp F11
&kp GRAVE &kp N1    &kp N2    &kp N3      &kp N4    &kp N5                    &kp N6    &kp N7   &kp N8          &kp N9    &kp N0    &kp F12
&trans    &kp EXCL  &kp AT    &kp HASH    &kp DLLR  &kp PRCNT                 &kp CARET &kp AMPS &kp KP_MULTIPLY &kp LPAR  &kp RPAR  &kp PIPE
&trans    &kp EQUAL &kp MINUS &kp KP_PLUS &kp LBRC  &kp RBRC  &trans   &trans &kp LBKT  &kp RBKT &kp SEMI        &kp COLON &kp BSLH  &trans
                    &trans    &trans      &trans    &trans    &none    &none  &trans    &trans   &trans          &trans
            >;

            sensor-bindings = <&inc_dec_kp RIGHT LEFT &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |     |  stop  |       |set_brpn |        |        |                | BT1   | BT2   |  BT3  |  BT4  |  BT5  | BT_CLR|
// |     |        |fnd_usg| run_frm | term   |i_run   |                | PSCR  | End   | Home |      |       |       |
// |     |  F2   | F7    |  F8    | F9       |i_debug |                |  <-   |  v    |   ^  |  ->  | BKSPC |  DEL  |
//  clck |ctrl_z |ctrl_x | ctrl_c | ctrl_v   |        |     |  |       |K_CMENU|PG_DOWN| PGUP |      |C_BKSPC| C_DEL
//       |       |       |        |          |        |     |  |       |       |      |       |      |       |
            bindings = <
&none      &idea_stop   &none              &idea_set_breakpoint   &none        &none                          &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &bt BT_CLR
&none      &none        &idea_find_usage   &idea_run_fragment     &idea_term   &idea_run                      &kp PSCRN    &kp END      &kp HOME     &none        &none          &none 
&none      &kp F2       &kp F7             &kp F8                 &kp F9       &idea_debug                    &kp LEFT     &kp DOWN     &kp UP       &kp RIGHT    &kp BSPC       &kp DEL
&none      &ctrl_z      &ctrl_x            &ctrl_c                &ctrl_v      &none         &none    &none   &kp K_CMENU  &kp PG_DN    &kp PG_UP    &none        &ctrl_bspc     &ctrl_del
                        &trans             &trans                 &trans       &trans        &kp CLCK &trans  &trans       &trans       &trans       &trans
            >;

            sensor-bindings = <&inc_dec_kp RIGHT LEFT &inc_dec_kp PG_UP PG_DN>;
        };
    };
};

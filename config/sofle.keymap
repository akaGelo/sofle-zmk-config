#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


/ {
    macros {
        idea_debug: idea_debug {
            label = "IDEA_debug";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LSHFT>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp F9>
                , <&macro_release &kp LSHFT>
                , <&macro_release &kp LALT>
                ;
        };
        go_to_backlog: go_to_backlog {
                    label = "go_to_backlog";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <10>;
                    tap-ms = <10>;
                    bindings
                        =
                          <&kp P &kp F &kp D &kp T &kp L &kp B &kp SPACE &kp P &kp F &kp L &kp F &kp X &kp E &kp SPACE &kp D &kp SPACE  &kp C &kp K &kp T &kp L &kp E &kp DOT &kp O &kp B &kp Q &kp SPACE  &kp C &kp G &kp H &kp B &kp Y &kp N &kp SPACE &kp G &kp J &kp COLON &kp F &kp K &kp C &kp N &kp F &kp SPACE>
                        ;
        };

        ctrl_z: ctrl_z {
                    label = "ctrl_z";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <10>;
                    tap-ms = <10>;
                    bindings
                        = <&macro_press &kp LCTRL>
                        , <&macro_tap &kp Z>
                        , <&macro_release &kp LCTRL>
                        ;
        };


        ctrl_x: ctrl_x {
                    label = "ctrl_x";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <10>;
                    tap-ms = <10>;
                    bindings
                        = <&macro_press &kp LCTRL>
                        , <&macro_tap &kp X>
                        , <&macro_release &kp LCTRL>
                        ;
        };


        ctrl_c: ctrl_c {
                    label = "ctrl_c";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <10>;
                    tap-ms = <10>;
                    bindings
                        = <&macro_press &kp LCTRL>
                        , <&macro_tap &kp C>
                        , <&macro_release &kp LCTRL>
                        ;
        };


        ctrl_v: ctrl_v {
                    label = "ctrl_v";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <10>;
                    tap-ms = <10>;
                    bindings
                        = <&macro_press &kp LCTRL>
                        , <&macro_tap &kp V>
                        , <&macro_release &kp LCTRL>
                        ;
        };


    };
};


/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  `    |  1  |  2  |  3   |  4   |  5   |                           |  6   |  7    |  8    |  9   |   0   | INS   |
// |  ESC  |  Q  |  W  |  E   |  R   |  T   |                           |  Y   |  U    |  I    |  O   |   P   |  [    |
// |  TAB  |  A  |  S  |  D   |  F   |  G   |                           |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE         |  |        |  N   |  M    |  ,    |  .   |   /   | LSHFT |
//               |LGUI| ALT  | CTRL   | ENTER|  CLCK&LGUI   |  | LGUI   | SPACE| CTRL  | ALT   |  BSPC  |
            bindings = <
&kp GRAVE &kp N1 &kp N2   &kp N3   &kp N4    &kp N5                                &kp N6       &kp N7    &kp N8    &kp N9   &kp N0   &kp INS
&kp ESC   &kp Q  &kp W    &kp E    &kp R     &kp T                                 &kp Y        &kp U     &kp I     &kp O    &kp P    &kp LBKT
&kp TAB   &kp A  &kp S    &kp D    &kp F     &kp G                                 &kp H        &kp J     &kp K     &kp L    &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X    &kp C    &kp V     &kp B     &kp C_MUTE     &none        &kp N        &kp M     &kp COMMA &kp DOT  &kp FSLH &kp RSHFT
                 &kp LGUI &kp LALT &kp LCTRL &lt 1 RET &mt LGUI CLCK  &kp LGUI     &lt 2 SPACE  &kp RCTRL &kp RALT  &kp BSPC
            >;

            sensor-bindings = <&inc_dec_kp UP DOWN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// | `     |   1 |   2 |   3  |   4  |   5  |                   |   6  |   7   |   8   |   9  |    0  |  F12  |
// |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
// |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
//               |     |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&trans    &kp F1    &kp F2    &kp F3      &kp F4    &kp F5                    &kp F6    &kp F7   &kp F8          &kp F9    &kp F10   &kp F11
&kp GRAVE &kp N1    &kp N2    &kp N3      &kp N4    &kp N5                    &kp N6    &kp N7   &kp N8          &kp N9    &kp N0    &kp F12
&trans    &kp EXCL  &kp AT    &kp HASH    &kp DLLR  &kp PRCNT                 &kp CARET &kp AMPS &kp KP_MULTIPLY &kp LPAR  &kp RPAR  &kp PIPE
&trans    &kp EQUAL &kp MINUS &kp KP_PLUS &kp LBRC  &kp RBRC  &trans   &trans &kp LBKT  &kp RBKT &kp SEMI        &kp COLON &kp BSLH  &trans
                    &trans    &trans      &trans    &trans    &trans   &trans &trans    &trans   &trans          &trans
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |     | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |       |       |      |      |       | BT_CLR|
// |     |      |      |       |       |      |                | PSCR  | Home  |  End |      |       |       |
// |     |      |      |       |       |      |                |  <-   |  v    |   v  |  ->  | BKSPC |  DEL  |
//       |ctrl_z|ctrl_x| ctrl_c| ctrl_v|      |      |  |      |K_CMENU|PG_DOWN| PGUP |      |       |
//       |      |      |       |       |      |      |  |      |       |      |       |      |       |
            bindings = <
&trans     &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4             &trans       &trans      &trans    &trans    &trans   &bt BT_CLR
&trans     &trans       &trans       &trans       &trans       &go_to_backlog           &kp PSCRN    &kp HOME    &kp END   &trans    &trans   &trans
&trans     &trans       &trans       &trans       &trans       &idea_debug              &kp LEFT     &kp DOWN    &kp UP    &kp RIGHT &kp BSPC &kp DEL
&trans     &ctrl_z      &ctrl_x      &ctrl_c      &ctrl_v      &trans  &trans   &trans  &kp K_CMENU  &kp PG_DN   &kp PG_UP &trans    &trans   &trans
                        &trans       &trans       &trans       &trans  &trans   &trans  &trans       &trans      &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp LEFT RIGHT &inc_dec_kp PG_UP PG_DN>;
        };
    };
};

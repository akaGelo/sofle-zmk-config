        };


        ctrl_v: ctrl_v {
                    label = "ctrl_v";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <40>;
                    tap-ms = <40>;
                    bindings
                        = <&macro_press &kp LCTRL>

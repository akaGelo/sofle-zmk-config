                    = <&macro_press &kp LCTRL>
                    , <&macro_tap &kp F8>
                    , <&macro_release &kp LCTRL>
                    ;
        };

        idea_stop: idea_stop {
                label = "IDEA_stop";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                wait-ms = <40>;
                tap-ms = <40>;
                bindings
                    = <&macro_press &kp LCTRL>

                        , <&macro_release &kp SPACE>
                        ;
        };


        ctrl_x: ctrl_x {
                    label = "ctrl_x";
                    compatible = "zmk,behavior-macro";
                    #binding-cells = <0>;
                    wait-ms = <40>;
                    tap-ms = <40>;
